@model ProductDtoForUpdate

<div class="text-center">
    <div class="display-6">Update</div>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">
    <div class="text-danger my-3" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group my-3">
        <label class="my-1" asp-for="CategoryId">Category</label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId"></select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label class="my-1" asp-for="Summary">Summary</label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group my-3">
        <img class="rounded shadow" width="150" src="@Model?.ImageUrl" />
    </div>

    <div class="form-group my-3">
        <label class="my-1" asp-for="ImageUrl">Image URL</label>
        <input name="file" type="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Update
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Products
            </a>
        </div>
    </div>
</form>